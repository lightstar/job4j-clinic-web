<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.lightstar.clinic.ClinicService"/>
    </bean>

    <bean class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.lightstar.clinic.DrugService"/>
    </bean>

    <bean class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.lightstar.clinic.persistence.RoleService"/>
    </bean>

    <bean class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.lightstar.clinic.persistence.MessageService"/>
    </bean>
</beans>